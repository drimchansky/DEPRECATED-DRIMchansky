{
  "name": "drimchansky.space",
  "version": "0.0.1",
  "description": "empty place of digital space",
  "main": "index.js",
  "scripts": {
    "watch": "parcel src/pages/index.pug ./ --no-cache",
    "build": "parcel build src/pages/index.pug --public-url ./ --out-dir ./prod --no-cache",
    "clear": "rimraf dist/ prod/",
    "lint": "node -e console.clear() && stylelint src/styles/**/*.css",
    "lint-fix": "node -e console.clear() && stylelint src/styles/**/*.css --fix"
  },
  "author": "DRIMchansky",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "eslint": "^6.2.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "normalize.css": "^8.0.1",
    "parcel-bundler": "^1.12.4",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.3",
    "postcss-custom-properties": "^9.0.2",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.1.2",
    "prettier": "^1.18.2",
    "pug": "^2.0.4",
    "stylelint": "^11.1.1",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.1"
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    ".cache"
  ],
  "stylelint": {
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "value-list-comma-newline-after": [
        "always"
      ],
      "declaration-block-trailing-semicolon": null,
      "block-closing-brace-newline-before": null,
      "block-opening-brace-space-before": null
    },
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order"
    ]
  }
}
